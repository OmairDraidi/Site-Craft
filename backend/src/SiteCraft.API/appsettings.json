{
  "ConnectionStrings": {
    "DefaultConnection": "Server=mysql;Port=3306;Database=sitecraft_db;User=sitecraft_user;Password=sitecraft_pass;CharSet=utf8mb4;"
  },
  "Redis": {
    "ConnectionString": "redis:6379"
  },
  "JwtSettings": {
    "SecretKey": "YOUR_SUPER_SECRET_KEY_MINIMUM_32_CHARACTERS_LONG_FOR_PRODUCTION_CHANGE_THIS",
    "Issuer": "SiteCraft",
    "Audience": "SiteCraftClients",
    "ExpiryMinutes": 60
  },
  "CorsOrigins": [
    "http://localhost:3000",
    "http://localhost:5173",
    "http://localhost:5174"
  ],
  "Serilog": {
    "MinimumLevel": {
      "Default": "Information",
      "Override": {
        "Microsoft": "Warning",
        "Microsoft.AspNetCore": "Warning"
      }
    },
    "WriteTo": [
      {
        "Name": "Console"
      }
    ]
  },
  "Logging": {
    "LogLevel": {
      "Default": "Information",
      "Microsoft.AspNetCore": "Warning"
    }
  },
  "AllowedHosts": "*"
}
