{
  "ConnectionStrings": {
    "DefaultConnection": "${DB_CONNECTION_STRING}"
  },
  "Redis": {
    "ConnectionString": "${REDIS_CONNECTION_STRING}"
  },
  "JwtSettings": {
    "SecretKey": "${JWT_SECRET_KEY}",
    "Issuer": "${JWT_ISSUER:-SiteCraft}",
    "Audience": "${JWT_AUDIENCE:-SiteCraftClients}",
    "ExpiryMinutes": "${JWT_EXPIRY_MINUTES:-60}"
  },
  "CorsOrigins": [
    "${CORS_ORIGIN_1:-https://sitecraft.com}",
    "${CORS_ORIGIN_2:-https://www.sitecraft.com}",
    "${CORS_ORIGIN_3:-https://app.sitecraft.com}"
  ],
  "AllowedHosts": "*",
  "RateLimiting": {
    "EnableRateLimiting": true,
    "MaxRequestsPerMinute": "${RATE_LIMIT_PER_MINUTE:-10}",
    "MaxRequestsPer5Minutes": "${RATE_LIMIT_PER_5MIN:-30}",
    "MaxRequestsPerHour": "${RATE_LIMIT_PER_HOUR:-100}"
  },
  "Serilog": {
    "MinimumLevel": {
      "Default": "Information",
      "Override": {
        "Microsoft": "Warning",
        "Microsoft.AspNetCore": "Warning"
      }
    },
    "WriteTo": [
      {
        "Name": "Console"
      },
      {
        "Name": "File",
        "Args": {
          "path": "logs/sitecraft-.log",
          "rollingInterval": "Day"
        }
      }
    ]
  },
  "Logging": {
    "LogLevel": {
      "Default": "Information",
      "Microsoft.AspNetCore": "Warning",
      "Microsoft.EntityFrameworkCore": "Warning"
    }
  }
}
